@model BookShop.Models.AuthorDto

<h4>AuthorDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-antiforgery="true"
              data-ajax="true"
              data-ajax-method="POST"
              data-ajax-url="BookSpa/SaveNewAuthor"
              data-ajax-success="BookSpaNs.Books.saveAuthorService"
              data-ajax-failure="BookSpaNs.Books.saveAuthorService">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AuthorFirstName" class="control-label"></label>
                <input asp-for="AuthorFirstName" class="form-control" />
                <span asp-validation-for="AuthorFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorLasttName" class="control-label"></label>
                <input asp-for="AuthorLasttName" class="form-control" />
                <span asp-validation-for="AuthorLasttName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AuthorCountry" class="control-label"></label>
                <input asp-for="AuthorCountry" class="form-control" />
                <span asp-validation-for="AuthorCountry" class="text-danger"></span>
            </div>
            <div class="form-group d-inline">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="form-group d-inline">
                <input onclick="BookSpaNs.Books.dialogCancelButton();" type="submit" value="Cancel" class="btn btn-secondary" />
            </div>
        </form>
    </div>
</div>


